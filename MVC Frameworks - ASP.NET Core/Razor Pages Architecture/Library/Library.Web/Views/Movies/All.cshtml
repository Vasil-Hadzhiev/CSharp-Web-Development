@model List<AllMoviesViewModel>

@{
    ViewData["Title"] = "All";
}

<h2>All</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.MovieId">
                        @movie.Title
                    </a>
                </td>
                <td>
                    <a asp-controller="Directors" asp-action="Details" asp-route-id="@movie.DirectorId">
                        @movie.Director
                    </a>
                </td>
                @if (movie.Status == "At home")
                {
                    <td>@movie.Status</td>
                }
                else
                {
                    <td class="table-warning">@movie.Status</td>
                }
            </tr>
        }
    </tbody>
</table>