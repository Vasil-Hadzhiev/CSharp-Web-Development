@page
@model BookLibrary.Web.Pages.Books.AddModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add Book</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea name="Description" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Author" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ImageUrl" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input asp-page-handler="AddBook" type="submit" class="btn btn-success" value="Add book">
            <input asp-page-handler="Cancel" type="submit" class="btn btn-outline-dark" value="Cancel">
        </div>
    </div>
</form>